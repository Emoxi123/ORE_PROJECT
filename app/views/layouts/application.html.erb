<!DOCTYPE html>
<html>
  <head>
    <title>Ore Official Website</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Ore Official Website</title>
    <link rel="icon" href="app/assets/images/Layout/favicon.ico" type="image/x-icon"/>
  </head>

  <body>

  <div id="container">
      <div id = "nav">
        <div id="logo-wrapper"></div>
        <div id = "nav_wrapper">
          <ul>
            <li><%= link_to "Home", controller: "pages", action: "index"%></li>
            <li>
              <a href="/"><%= link_to "Our Team", controller: "pages", action: "our_team"%></a>
              <ul>
                <li><%= link_to "Sound Managers", controller: "pages", action: "sound_managers"%></li>
                <li><%= link_to "Video Managers", controller: "pages", action: "video_managers" %></li>
                <li><%= link_to "Arts Managers", controller: "pages", action: "arts_managers" %></li>


              </ul>
            </li>
            <li>
            <a href="/"><%= link_to "Artists", controller: "pages", action: "artists" %></a>
              <ul>
                <li><%= link_to "Photography", controller: "pages", action: "photographers"%></li>
                <li><%= link_to "Music", controller: "pages", action: "musicians"%></li>
                <li><%= link_to "Arts", controller: "pages", action: "arts" %></li>
                
              </ul>

            </li>
              <li><%= link_to "Merch", controller: "pages", action: "merch"%></li>
              <li><%= link_to "Contacts", controller: "pages", action: "contacts" %></li>
              <li><%= link_to "Forum", controller: "pages", action: "forum" %></li>

          </ul>
        </div>
      </div>



      <div id = "main_window">  
        

        <div id="left-bar">
          <div id="new-artists">
            <h3 style="color:white">new artists</h3>
            <br>
            <ul id="artists-releases">


              <% @artist.each do |artist| %>
                <li>
                  <h5><%= artist.artist_name %></h5>
                  <%= image_tag(artist.coverart_url) %><!-- set link to artist! -->
                </li>
              <% end %>


            </ul>
          </div>
          <div id="new-releases">
            <h3 style="color:white">new material</h3>
            <br>
            <ul id="artists-releases">

              <% @works.each do |work| %>
              <li>
                <h5><%= work.name %></h5>
                <%= image_tag(work.coverart_url) %><!-- set link to work!! -->
              </li>
              <% end %>


          </ul>
          </div>

        </div>

      


        <div id="right-bar">
          <div id="highlights">
            <h3 style="color:white">highlights</h3>


            <% @highlights.each do |highlight| %>
              <%= image_tag(highlight.coverart_url) %>
            <% end %>


          </div>



          <div id="upcoming-music-events">
            <h3 style="color:white">music events</h3>
            <br>
            <ul id="events">
              <li>
                <% @music_events.each do |event| %>
                  <%= link_to( image_tag(event.coverart_url), link_to(event.event_url), target: "_blank") %>
                  <h3><%= event.event_name %></h3>
                <% end %>
              </li>
            </ul>
          </div>


          <div id="upcoming-arts-events">
            <h3 style="color:white">arts events</h3>
            <br>
            <ul id="events">


              <li>
                <% @arts_events.each do |event| %>
                  <%= image_tag(event.coverart_url) %>
                  <h3><%= event.event_name %></h3>
                <% end %>
              </li>


            </ul>
          </div>

      </div>
        <div id = "contents">    


          <%= yield %>


        </div>  
      </div>  
    <div id = "footer">
      <div id="footer-img"></div>
      <div id = "credits">†Ore ℗©. All rights reserved.</div>
    </div>
    
  </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
